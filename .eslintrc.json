{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/recommended",
    "standard"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",  
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "comma-dangle": "off",
    "yoda": ["warn", "always", {
      "onlyEquality": true
    }],
    "no-useless-constructor": "off"
  }
}
